<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :nickname, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :nickname, class: "form-control shadow rounded", placeholder: "Enter a nickname" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :surname, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :surname, class: "form-control shadow rounded", placeholder: "Enter a surname" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :mail, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.email_field :mail, class: "form-control shadow rounded", placeholder: "Enter your mail address" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>